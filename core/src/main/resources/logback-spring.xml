<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/base.xml"/>
    <property name="log.path" value="~/logs/grape-sticker"/>

    <appender name="applicationFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <append>true</append>
        <prudent>true</prudent>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.path}/grape-sticker.log.%d{yyyyMMdd}</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>

    <springProfile name="test">
        <root level="TRACE">
            <appender-ref ref="CONSOLE"/>
        </root>
        <logger name="org.springframework" level="INFO"/>
    </springProfile>

    <springProfile name="dev">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="applicationFileAppender"/>
        </root>
        <logger name="org.springframework" level="INFO"/>
    </springProfile>

    <springProfile name="production">
        <root level="WARN">
            <appender-ref ref="applicationFileAppender"/>
        </root>
        <logger name="org.springframework" level="WARN"/>
    </springProfile>
</configuration>